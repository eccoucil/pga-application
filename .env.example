# ============================================================
# PGA Application — Environment Variables
# Copy to .env and fill in values: cp .env.example .env
# ============================================================

# ── Supabase ──────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ── Frontend (baked at build time) ────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_API_URL=http://localhost:8001

# ── AI API Keys ───────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
# Optional: LlamaExtract for document parsing
# LLAMA_CLOUD_API_KEY=

# ── Neo4j ─────────────────────────────────────────────────────
NEO4J_PASSWORD=pga_dev_password

# ── CORS (comma-separated origins) ───────────────────────────
CORS_ORIGINS=http://localhost:3001

# ── Host Port Overrides (optional) ───────────────────────────
# FRONTEND_PORT=3001
# BACKEND_PORT=8001
# NEO4J_HTTP_PORT=17474
# NEO4J_BOLT_PORT=17687
# QDRANT_PORT=16333
# QDRANT_GRPC_PORT=16334
